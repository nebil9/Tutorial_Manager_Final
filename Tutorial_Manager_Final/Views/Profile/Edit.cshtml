
@model Profile

@{
    ViewData["Title"] = "Edit";
}
<h2>Edit Profile</h2>

<form action="/profile/edit/@Model.ProfileId" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ProfileName">Profile Name</label>
            <input type="hidden" name="ProfileId" value="@Model.ProfileId" />
            <input type="text" class="form-control" id="ProfileName" name="ProfileName" placeholder="Profile Name" value="@Model.ProfileName">
        </div>
        <div class="form-group col-md-6">
            <label for="Bio">Bio</label>
            <input type="text" class="form-control" id="Bio" name="Bio" placeholder="Bio" value="@Model.Bio">
        </div>
        <div class="form-group col-md-6">
            <label for="ProfilePicture">Profile Picture</label>
            <input type="image" class="form-control" id="ProfilePicture" name="ProfilePicture" placeholder="Profile Picture" value="@Model.ProfilePicture">
        </div>
    </div>
    

    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-danger" href="#">Cancel</a> @*<-- should be modified to the home page of the user>*@
</form>