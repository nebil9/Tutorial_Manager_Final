@model Rate
@{
    int index = ViewBag.index;

    ViewData["Title"] = "Rate";
}

<h2>Rate a Tutor</h2>
<form action="/Rate/create" method="post">
    <div class="form-row">


        <div class="form-group col-md-6">
            <label for="Comment">Comment</label>
            <input type="text" class="form-control" id="Comment" name="Comment" placeholder="Comment">
        </div>

        <div class="form-group col-md-6">
            <label for="Name">Tutor Name</label>
            <input type="text"  class="form-control" id="Name"  name="Name" placeholder="Name" value="@Model.Tut.Name" >
        </div>
        
        <div class="form-group col-md-6">
            <label for="StuId">Your Id</label>
            <input type="text"  class="form-control" id="StuId" readonly name="StuId" placeholder="StuId" value="@index">
        </div>

    </div>

    <button type="submit" class="btn btn-success">Send</button>
    <a class="btn btn-danger" href="/StudentHome/Index">Cancel</a>
</form>




